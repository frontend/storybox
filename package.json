{
  "name": "frontend-storybox",
  "displayName": "ðŸ“– Storybox",
  "description": "Storybook distribution for styleguide as a deliverable",
  "author": "github/frontend",
  "url": "https://github.com/frontend/storybox",
  "license": "MIT",
  "private": true,
  "version": "2.0.0",
  "storyboxVersion": "2.0.0",
  "type": "module",
  "chan": {
    "release-prefix": ""
  },
  "scripts": {
    "start": "concurrently \"yarn tailwind:start\" \"yarn storybook\"",
    "build": "yarn build:assets",
    "clean": "rm -rf node_modules/.cache",
    "generate": "npx generact",
    "tailwind:build": "export NODE_ENV=production && npx tailwindcss -i ./src/styles/base.css -o ./public/css/styles.css --minify",
    "tailwind:start": "npx tailwindcss -i ./src/styles/base.css -o ./public/css/styles.css --watch",
    "storybook:start": "NODE_PATH=src start-storybook -s public -p 6006",
    "storybook:build": "NODE_PATH=src build-storybook",
    "modules:start": "vite --watch",
    "modules:build": "rollup --config",
    "storybook": "storybook dev --no-open -p 6006",
    "build-storybook": "storybook build",
    "prestorybook:start": "rm -rf node_modules/.cache",
    "dev": "concurrently -r \"yarn tailwind:start\" \"yarn modules:start\" \"yarn storybook:start\"",
    "build:styleguide": "yarn build:assets && yarn storybook:build",
    "build:assets": "yarn tailwind:build && yarn modules:build && npx @ffflorian/jszip-cli add public/ > public/tl-styleguide-assets.zip",
    "lint:js": "eslint --ext js,jsx,ts,tsx ./src --max-warnings=0",
    "lint:css": "stylelint 'src/**/*.css'",
    "fix:js": "eslint --ext js,jsx,ts,tsx ./src --max-warnings=0 --fix",
    "fix:css": "stylelint --fix 'src/**/*.css'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "jest:start": "jest --watchAll",
    "jest:run": "jest",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@types/prettier": "^2.7.2",
    "autoprefixer": "^10.4.14",
    "clsx": "^1.2.1",
    "glob": "^10.2.6",
    "postcss": "^8.4.23",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@storybook/addon-docs": "^7.0.17",
    "@storybook/addon-essentials": "^7.0.17",
    "@storybook/addon-interactions": "^7.0.17",
    "@storybook/addon-links": "^7.0.17",
    "@storybook/blocks": "^7.0.17",
    "@storybook/manager-api": "^7.0.17",
    "@storybook/react": "^7.0.17",
    "@storybook/react-vite": "^7.0.17",
    "@storybook/testing-library": "^0.1.0",
    "@storybook/theming": "^7.0.17",
    "@svgr/webpack": "^8.0.1",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-tailwind": "^0.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-twig-enhancements": "^1.0.1",
    "prettier-plugin-twig-melody": "^0.4.6",
    "prop-types": "^15.8.1",
    "rollup": "^3.23.0",
    "storybook": "^7.0.17",
    "typescript": "^5.0.4",
    "vite": "^4.3.2"
  }
}
